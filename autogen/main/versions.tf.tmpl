{% set module_path_str =  module_path|string %}
{% set module_registry_name = module_path_str.split('/')[-1] %}

terraform {
  required_version = ">=1.3"

{% if beta_cluster and not autopilot_cluster %}
  required_providers {
    google = {
      source  = "hashicorp/google"
      version = ">= 6.7.0, < 6.11.0"
    }
    google-beta = {
      source  = "hashicorp/google-beta"
      version = ">= 6.7.0, < 6.11.0"
    }
{% elif beta_cluster and autopilot_cluster %}
  required_providers {
    google = {
      source = "hashicorp/google"
      version = ">= 6.5.0, < 6.11.0"
    }
    google-beta = {
      source = "hashicorp/google-beta"
      version = ">= 6.5.0, < 6.11.0"
    }
{% elif autopilot_cluster  %}
  required_providers {
    google = {
      source = "hashicorp/google"
      version = ">= 6.5.0, < 6.11.0"
    }
{% else %}
  required_providers {
    google = {
      source  = "hashicorp/google"
      version = ">= 6.7.0, < 6.11.0"
    }
{% endif %}
    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "~> 2.10"
    }
    random = {
      source  = "hashicorp/random"
      version = ">= 2.1"
    }
  }
  provider_meta "{% if beta_cluster %}google-beta{% else %}google{% endif %}" {
    module_name = "blueprints/terraform/terraform-google-kubernetes-engine{% if module_registry_name %}:{{ module_registry_name }}{% endif %}/v34.0.0"
  }
}
