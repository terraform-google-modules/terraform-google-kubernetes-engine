{% set module_path_str =  module_path|string %}
{% set module_registry_name = module_path_str.split('/')[-1] %}

terraform {
  required_version = ">=0.13"

{% if beta_cluster %}
  required_providers {
    google-beta = {
      source  = "hashicorp/google-beta"
      version = ">= 3.79.0, <4.0.0"
    }
    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "~> 2.0"
    }
  }
  provider_meta "google-beta" {
    module_name = "blueprints/terraform/terraform-google-kubernetes-engine{% if module_registry_name %}:{{ module_registry_name }}{% endif %}/v17.1.0"
  }
{% else %}
  required_providers {
    google = {
      source  = "hashicorp/google"
      version = ">= 3.39.0, <4.0.0"
    }
    kubernetes = {
      source  = "hashicorp/kubernetes"
      version = "~> 2.0"
    }
  }
  provider_meta "google" {
    module_name = "blueprints/terraform/terraform-google-kubernetes-engine{% if module_registry_name %}:{{ module_registry_name }}{% endif %}/v17.1.0"
  }
{% endif %}
}
